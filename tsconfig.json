{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2019", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": ["@dcloudio/types", "@types/wechat-miniprogram"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "pages/**/*.vue",
    "components/**/*.vue",
    "App.vue",
    "main.ts",
    "main.js"
  ],
  "exclude": ["node_modules", "unpackage"]
}
